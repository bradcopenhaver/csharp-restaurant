<!DOCTYPE html>
@{
  Layout="Shared/_Layout.cshtml";
}

  <div class="container">
      <h1>Restaurant Directory</h1>
      @if (Model.Count > 0)
      {
        <h2>Cuisines you fancy</h2>
        @foreach (var cuisine in Model)
        {
          <h3><a href = "/cuisine/@cuisine.GetId()">@cuisine.GetName()</a></h3>
          <ul>
          @foreach (var restaurant in cuisine.FindRestaurants())
          {
            <li>@restaurant.GetName()</li>
          }
          </ul>
        }
          <h5><a href="/add/restaurant">New Restaurant</a></h5>
          <h5><a href="/add/cuisine">New Cuisine</a></h5><br>
          <form action="/delete-all" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-danger" type="submit" name="button">DELETE EVERYTHING!</button>
          </form>
      }else{
        <h5><a href="/add/cuisine">New Cuisine</a></h5><br>
      }
    </div>
