<!DOCTYPE html>
@{
  Layout="Shared/_Layout.cshtml";
}

  <div class="container">
    <h1>Restaurant Directory</h1>
    <h2>New Restaurant</h2><br>

      <form action="/add/restaurant" method="post">
        <div class="form-group">
          <label for="restaurant_name">Restaurant Name:</label>
          <input class="form-control" type="text" required name="restaurant_name">
        </div>
        <div class="form-group">
          <label for="restaurant_address">Address:</label>
          <input class="form-control" type="text" required name="restaurant_address">
        </div>
        <div class="form-group">
          <label for="restaurant_website">Website:</label>
          <input class="form-control" type="text" required name="restaurant_website">
        </div>
        <div class="form-group">
          <label for="restaurant_phone">Phone Number:</label>
          <input class="form-control" type="text" required name="restaurant_phone">
        </div>
        <select class="form-control" name = "cuisine_id">
          @foreach(var listItem in Model)
          {
            <option value="@listItem.GetId()">@listItem.GetName()</option>
          }
        </select>
        <button class="btn btn-info"type="submit">Create Restaurant</button>
      </form>
    <h5><a href="/">Cuisine List</a></h5>
  </div>
